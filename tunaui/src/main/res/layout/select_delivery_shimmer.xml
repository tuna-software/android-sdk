<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_select_delivery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    app:shimmer_direction="left_to_right"
    app:shimmer_duration="1500">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tunasoftware.tunaui.widgets.TunaDeliveryShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:deliveryShimmerDescriptionWidth="160dp"
            app:deliveryShimmerNameWidth="120dp"
            app:deliveryShimmerSelected="true" />

        <com.tunasoftware.tunaui.widgets.TunaDeliveryShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:deliveryShimmerDescriptionWidth="200dp"
            app:deliveryShimmerNameWidth="100dp"
            app:deliveryShimmerSelected="false" />

        <com.tunasoftware.tunaui.widgets.TunaDeliveryShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:deliveryShimmerDescriptionWidth="220dp"
            app:deliveryShimmerNameWidth="140dp"
            app:deliveryShimmerSelected="false" />

        <com.tunasoftware.tunaui.widgets.TunaDeliveryShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:deliveryShimmerDescriptionWidth="160dp"
            app:deliveryShimmerNameWidth="80dp"
            app:deliveryShimmerSelected="false" />

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>