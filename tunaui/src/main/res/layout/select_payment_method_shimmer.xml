<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_select_payment_method"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    app:shimmer_direction="left_to_right"
    app:shimmer_duration="1500">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tunasoftware.tunaui.widgets.TunaPaymentMethodShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:paymentMethodShimmerLabelWidth="190dp"
            app:paymentMethodShimmerSelected="true" />

        <com.tunasoftware.tunaui.widgets.TunaPaymentMethodShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:paymentMethodShimmerLabelWidth="190dp"
            app:paymentMethodShimmerSelected="false" />

        <com.tunasoftware.tunaui.widgets.TunaPaymentMethodShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:paymentMethodShimmerLabelWidth="150dp"
            app:paymentMethodShimmerSelected="false" />

        <com.tunasoftware.tunaui.widgets.TunaPaymentMethodShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:paymentMethodShimmerLabelWidth="80dp"
            app:paymentMethodShimmerSelected="false" />

        <com.tunasoftware.tunaui.widgets.TunaPaymentMethodShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:paymentMethodShimmerLabelWidth="30dp"
            app:paymentMethodShimmerSelected="false" />

        <com.tunasoftware.tunaui.widgets.TunaPaymentMethodShimmerWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:paymentMethodShimmerLabelWidth="45dp"
            app:paymentMethodShimmerSelected="false" />

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>