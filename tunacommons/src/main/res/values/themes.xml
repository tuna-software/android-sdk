<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TunaUI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tunaui_primary_color</item>
        <item name="colorPrimaryDark">@color/tunaui_primary_dark_color</item>
        <item name="colorPrimaryVariant">@color/tunaui_primary_variant_color</item>
        <item name="colorOnPrimary">@color/tunaui_secundary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tunaui_secundary_color</item>
        <item name="colorSecondaryVariant">@color/tunaui_secundary_color</item>
        <item name="colorOnSecondary">@color/tunaui_primary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/tuna_black</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.TunaUI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TunaAndroidSDK.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TunaAndroidSDK.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TunaToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/TunaToolbarTheme</item>
        <item name="elevation">4dp</item>
        <item name="titleTextAppearance">@style/TunaToolbarTitleTextAppearance</item>
    </style>

    <style name="TunaFooterBarStyle" parent="TunaToolbarStyle">
        <item name="android:background">@drawable/tuna_bg_footer_bar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TunaToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/tuna_black</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/tuna_black</item>
    </style>

    <style name="TunaToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tuna_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TunaUI.TunaButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/tuna_button_bg</item>
        <item name="elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.TunaUI.TunaTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/tuna_black</item>
        <item name="boxBackgroundColor">@color/tuna_background</item>
        <item name="android:textColorHint">@color/tuna_gray</item>
        <item name="hintTextColor">@color/tuna_gray</item>
        <item name="textColor">@color/tuna_black</item>
    </style>

    <style name="Theme.TunaUI.TunaTextInput">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Theme.TunaUI.TunaFooterBar.Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>